
<h3><strong>What to watch?</strong></h3>

  <div class="container mb-4">
    <div class="row g-3">
      <% @movies_rand.each do |movie| %>
        <div class="col card-column-5">
          <div class="card h-100 recommendation-card">
            <%= image_tag movie.poster_url, class: "card-img-top img_preview", alt: movie.title %>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
