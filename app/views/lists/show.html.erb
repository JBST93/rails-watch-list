<h1>Information about list:  <%= @list.name %></h1>

<ul>
<% @list.bookmarks.each do |bookmark| %>
<li>
  <%= bookmark.comment%>
  <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
</li>
<% end %>
</ul>

<%= link_to "Go back to home page", root_path %>
<%= link_to "Bookmark a movie", new_list_bookmark_path(@list)%>
